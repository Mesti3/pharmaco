<UserControl x:Class="pharmaco.components.medicine_components.medicine_text_block"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pharmaco.components.medicine_components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="Auto">
    <Grid Background="White">
        <StackPanel HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch" >
            <TextBlock x:Name="caption"  HorizontalAlignment="Stretch" Margin="0,10,0,5" TextWrapping="Wrap" Text="caption" VerticalAlignment="Top" FontSize="35"/>
            <TextBlock x:Name="info" HorizontalAlignment="Stretch" Margin="0,5,0,10" TextWrapping="Wrap" Text="info" VerticalAlignment="Top" FontSize="25"/>
        </StackPanel>
      
    </Grid>
</UserControl>
